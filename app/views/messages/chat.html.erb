
<div id="chat-box">
  <p>
    Conversation between you and <%= @peer_name %>
  </p>

  <div id="message-list">
    <% @messages.each do |message|%>
    <div>
      <%= message.sender_name %>: <%= message.content %>
    </div>
    <% end %>
  </div>
  <%= form_for Message.new, remote: true, :html => {:'data-type' => 'json'} do |f|%>
    <%= f.hidden_field :receiver_name, value: @peer_name %>
    <%= f.text_field :content %>
    <%= f.submit "Send" %>
  <% end %>

</div>
